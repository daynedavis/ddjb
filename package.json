{
  "name": "hapi-react",
  "version": "0.0.1",
  "description": "React application with hapi server",
  "main": "./src/server/server.js",
  "scripts": {
    "bnrprod": "webpack --config ./webpack.production.config.js --progress --profile --colors && NODE_ENV=production node ./src/server/server.js",
    "devserver": "rimraf dist && webpack-dev-server --host 0.0.0.0 --watch-poll --inline --hot",
    "lint": "eslint --ext .jsx src/client; exit 0",
    "mongo": "docker run -d -p 3001:3000 mongoclient/mongoclient",
    "prod": "docker-compose -f docker-compose-production.yml build && docker-compose -f docker-compose-production.yml up",
    "server": "nodemon ./src/server/server.js",
    "start": "webpack-dev-server",
    "stopall": "docker kill $(docker ps -q)"
  },
  "author": "Dayne Davis",
  "license": "MIT",
  "dependencies": {
    "@angular/common": "~4.0.0",
    "@angular/compiler": "~4.0.0",
    "@angular/core": "~4.0.0",
    "@angular/forms": "~4.0.0",
    "@angular/http": "~4.0.0",
    "@angular/platform-browser": "~4.0.0",
    "@angular/platform-browser-dynamic": "~4.0.0",
    "@angular/router": "~4.0.0",
    "angular-in-memory-web-api": "~0.3.0",
    "core-js": "^2.4.1",
    "forever": "^0.15.3",
    "hapi": "^16.4.3",
    "inert": "^4.0.3",
    "mongoose": "^4.11.1",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-router": "^4.1.1",
    "reflect-metadata": "^0.1.10",
    "rxjs": "5.0.1",
    "wreck": "^12.2.2",
    "zone.js": "^0.8.4"
  },
  "devDependencies": {
    "@types/angular2": "0.0.2",
    "@types/core-js": "^0.9.42",
    "@types/jasmine": "2.5.36",
    "@types/node": "^6.0.46",
    "awesome-typescript-loader": "^3.2.2",
    "babel-core": "^6.25.0",
    "babel-eslint": "^7.1.1",
    "babel-jscs": "^3.0.0-beta1",
    "babel-loader": "^7.1.1",
    "babel-polyfill": "^6.23.0",
    "babel-preset-latest": "^6.24.1",
    "babel-preset-react": "^6.3.13",
    "babel-preset-react-hmre": "^1.1.0",
    "babel-preset-stage-2": "^6.18.0",
    "canonical-path": "0.0.2",
    "concurrently": "^3.2.0",
    "css-loader": "^0.26.1",
    "eslint": "^3.12.1",
    "eslint-plugin-react": "^6.8.0",
    "html-webpack-plugin": "^2.24.1",
    "lodash": "^4.16.4",
    "nodemon": "^1.11.0",
    "react-hot-loader": "^3.0.0-beta.7",
    "rimraf": "^2.5.4",
    "style-loader": "^0.13.1",
    "ts-loader": "^2.3.2",
    "tslint": "^3.15.1",
    "typescript": "^2.4.0",
    "webpack": "^3.1.0",
    "webpack-dev-server": "^2.5.1"
  }
}
